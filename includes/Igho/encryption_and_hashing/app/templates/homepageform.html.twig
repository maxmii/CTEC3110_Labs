{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">
        <h3>{{ page_heading_2 }}</h3>
        <h3>{{ error_message }}</h3>
        <form action="{{ action }}" method="post">
            <fieldset>
                <legend>User details</legend>
                <br>
                <label for="username">Enter your name:</label>
                <input id="username" name="username" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50"> {{ error_message_username }}
                <br><br>
                <label for="password">Enter your password:</label>
                <input id="password" name="password" type="password" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <label for="email">Enter your email:</label>
                <input id="email" name="email" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50"> {{ error_message_email }}
                <br><br>
                <label for="requirements">Dietary requirements:</label>
                <textarea id="requirements" name="requirements" value="" rows="3" cols="50">Enter your special dietary requirements</textarea>
                <br><br>
                <input type="submit" value="Create user account >>>">
            </fieldset>
        </form>
        <p class="curr_page"><a href="{{ landing_page }}">Home</a></p>
    </div>
{% endblock %}
