{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">
        <h2>{{ page_heading_2 }}</h2>
        <h3>{{ page_text }}</h3>
        <form action="{{ action }}" method="{{ method }}">
            <fieldset>
                <legend>Dictionary</legend>
                <p>What word do you need to define?</p>
                <label for="word">Enter a word:</label>
                <input id="word" name="word" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50">

                <input type="submit" value="{{ submit_button }}">
            </fieldset>
        </form>
    </div>
{% endblock %}
